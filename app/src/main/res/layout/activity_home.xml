<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:elevation="15dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" >

            <TextView
                android:id="@+id/tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:text="Northern Arc Travel App"
                android:textColor="#fff"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/enterDayReportCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/enterDayReportTx"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="One Way"
                android:clickable="true"
                android:onClick="showCardSingle"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/kraDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/kraTx"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Round Trip"
                android:clickable="true"
                android:onClick="showRoundCard"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/filterCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/filterTx"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Multi-city Trip"
                android:clickable="true"
                android:onClick="showMultiCard"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/edittext"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_il"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:padding="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            >

            <EditText
                android:id="@+id/from"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="From Airport Code"
                android:textColorHint="@color/colorPrimary"
                android:inputType="text"
                android:background="@drawable/ed"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_il"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:padding="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            >

            <EditText
                android:id="@+id/to"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="To Airport Code"
                android:background="@drawable/ed"
                android:textColorHint="@color/colorPrimary"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:singleLine="true"
                android:imeOptions="actionDone"
                />



        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Select Preferred Timing"/>

        <Spinner
            android:id="@+id/spinner"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button

            android:layout_margin="20dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectDateButton"
            android:text="Select Date"
            android:background="@color/colorPrimary"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="10dp"
            android:src="@drawable/rightarrow" />

    </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/cardRoundTrip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/edittext2"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_il2"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:padding="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >

                <EditText
                    android:id="@+id/from2"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="From Airport Code"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="text"
                    android:background="@drawable/ed"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_il2"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:padding="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >

                <EditText
                    android:id="@+id/to2"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To Airport Code"
                    android:background="@drawable/ed"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    />



            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Select Preferred Timing"/>

            <Spinner
                android:id="@+id/spinner2"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectStartDateButton"
                    android:text="Select Start Date"
                    android:background="@color/colorPrimary"
                    />


                <Button
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectEndDateButton"
                    android:text="Select End Date"
                    android:background="@color/colorPrimary"
                    />


            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="10dp"
                android:src="@drawable/rightarrow" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/cardMultiCity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/edittext3"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_il3"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:padding="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >

                <EditText
                    android:id="@+id/from3"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="From Airport"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="text"
                    android:background="@drawable/ed"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_il3"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:padding="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >

                <EditText
                    android:id="@+id/to3"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To Airport 1"
                    android:background="@drawable/ed"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    />



            </android.support.design.widget.TextInputLayout>

            <Button
                android:padding="20dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Add One More Airport"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Select Preferred Timing"/>

            <Spinner
                android:id="@+id/spinner3"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectStartDateButton3"
                    android:text="Select Start Date"
                    android:background="@color/colorPrimary"
                    />


                <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectEndDateButton3"
                    android:text="Select End Date"
                    android:background="@color/colorPrimary"
                    />


            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="10dp"
                android:src="@drawable/rightarrow" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/pastTrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/pastTripTx"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Your Trips"
                android:onClick="showtrips"
                android:clickable="true"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/pendingApprovalCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/pendingApprovalTx"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Pending Approvals"
                android:onClick="showteamstrips"
                android:clickable="true"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>


    </LinearLayout>



   </LinearLayout>


